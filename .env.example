# VAANI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# Neo4j Database Configuration (Optional)
# ========================================
# If you have Neo4j installed, configure these settings
# VAANI works without Neo4j but with reduced knowledge graph features

NEO_URI=bolt://localhost:7687
NEO_USER=neo4j  
NEO_PASS=your_neo4j_password_here

# ========================================
# Twilio Configuration (Optional)  
# ========================================
# For WhatsApp integration - Get credentials from https://console.twilio.com
# VAANI works without Twilio but without WhatsApp features

TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here  
TWILIO_PHONE_NUMBER=whatsapp:+1234567890

# ========================================
# Server Configuration
# ========================================
# Basic server settings

HOST=localhost
PORT=8080
DEBUG=False

# ========================================
# API Keys (Optional)
# ========================================
# For enhanced space data features

# NASA API Key (free from https://api.nasa.gov/)
NASA_API_KEY=your_nasa_api_key_here

# OpenWeather API Key for space weather (optional)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ========================================
# Security Settings
# ========================================
# For production deployment

SECRET_KEY=your_secret_key_for_sessions_here
CORS_ORIGINS=http://localhost:8080,https://yourdomain.com

# ========================================
# Performance Tuning
# ========================================
# Memory and performance optimization

MAX_MEMORY_MB=500
MAX_SESSIONS=100
CACHE_TIMEOUT_SECONDS=300
LOG_LEVEL=INFO

# ========================================
# Development Settings
# ========================================
# For development and testing

ENABLE_DEBUG_LOGS=False
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_AUTO_RELOAD=False